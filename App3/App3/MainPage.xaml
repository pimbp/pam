<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.MainPage"
             BackgroundColor="Aqua">

    <StackLayout BackgroundColor="Red" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand">
        <Entry x:Name="LoginEntry" WidthRequest="300" Placeholder="Enter your name"/>
        <Entry x:Name="PassEntry"  Placeholder="Enter your password"/>
        <Button Text="Login" WidthRequest="150" HorizontalOptions="Center" Clicked="Button_Clicked"/>
        <Image Source="tf.png"/>
    </StackLayout>
</ContentPage>
